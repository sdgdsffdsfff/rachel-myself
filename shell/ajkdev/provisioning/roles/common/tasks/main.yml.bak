---

- name: "mkdir /root/install"
  shell: mkdir -p /root/install

- name: "set nds"
  copy: src=resolv.conf
        dest=/etc/resolv.conf

- name: "replacing apt sources.list"
  copy: src=sources.list dest=/etc/apt/sources.list

- name: "update apt cache"
  apt: update_cache=yes

- name: "scp shell"
  copy: src=startSetvice.sh
        dest=/home/vagrant/startSetvice.sh

- name: "id_rsa"
  copy: src=id_rsa
        dest=/root/.ssh/

- name: "id_rsa.pub"
  copy: src=id_rsa.pub
        dest=/root/.ssh/

- name: "known_hosts"
  copy: src=known_hosts
        dest=/root/.ssh/

- name: adjust locale
  copy: src=locale
        dest=/etc/default/locale

- name: adjust timezone
  file: src=/opt/share/zoneinfo/Asia/Shanghai
        dest=/etc/localtime
        force=yes
        state=link

- name: "install vim"
  apt: pkg=vim
       state=present

- name: "install git-core"
  apt: pkg=git-core
       state=present

- name: "install autoconf"
  apt: pkg=autoconf
       state=present

- name: "install libcurl4-gnutls-dev"
  apt: pkg=libcurl4-gnutls-dev
       state=present

- name: "install g++"
  apt: pkg=g++
       state=present

- name: "install unzip"
  apt: pkg=unzip
       state=present

- name: "install make"
  apt: pkg=make
       state=present

- name: "install libxml2-dev"
  shell: cd /root/install;
         wget http://soft.dev.aifang.com/ansible/libxml2-2.7.2.tar.gz;
         tar zxvf libxml2-2.7.2.tar.gz;
         cd libxml2-2.7.2;
         ./configure; make && make install;

- name: "install libpcre++-dev"
  apt: pkg=libpcre++-dev
       state=present

- name: "install libjpeg8-dev"
  apt: pkg=libjpeg8-dev
       state=present

- name: "install libpng12-dev"
  apt: pkg=libpng12-dev
       state=present

- name: "install libfreetype6-dev"
  apt: pkg=libfreetype6-dev
       state=present

- name: "install uuid-dev"
  apt: pkg=uuid-dev
       state=present

- name: "install libtool"
  apt: pkg=libtool
       state=present

- name: "install libncurses5-dev"
  apt: pkg=libncurses5-dev
       state=present

- name: "install re2c"
  apt: pkg=re2c
       state=present

- name: "install subversion"
  apt: pkg=subversion
       state=present

- name: "install cmake"
  apt: pkg=cmake
       state=present

- name: "install build-essential"
  apt: pkg=build-essential
       state=present

- name: "install libpq-dev"
  apt: pkg=libpq-dev
       state=present

- name: "install zlib1g-dev"
  apt: pkg=zlib1g-dev
       state=present

- name: "install curl"
  apt: pkg=curl
       state=present


